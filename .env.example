# Weather API configuration
WEATHER_API_KEY=your_openweather_api_key_here
WEATHER_API_BASE_URL=https://api.openweathermap.org/data/2.5
WEATHER_API_UNITS=metric

# Cache configuration
WEATHER_CACHE_DURATION_HOURS=3
LOCATION_CHANGE_THRESHOLD_KM=5

# Google Drive API configuration
GOOGLE_EXPO_CLIENT_ID=your_expo_client_id_here
GOOGLE_IOS_CLIENT_ID=your_ios_client_id_here
GOOGLE_ANDROID_CLIENT_ID=your_android_client_id_here
GOOGLE_WEB_CLIENT_ID=your_web_client_id_here

# Azure Speech Services configuration
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=your_azure_speech_region_here
AZURE_SPEECH_ENDPOINT=your_azure_speech_endpoint_here